<div class="container mt-5">
 <h1>Post your Review !</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-group">
      <%= f.input :rating %>
    </div>

  <div class="form-group">
      <%= f.input :content %>
    </div>

    <%= f.submit class: 'btn btn-primary mt-3' %>
<% end %>
</div>
